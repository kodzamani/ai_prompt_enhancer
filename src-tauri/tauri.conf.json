{
  "productName": "AI Prompt Enhancer",
  "version": "1.0.0",
  "identifier": "com.aipromptenhancer.app",
  "build": {
    "frontendDist": "../"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AI Prompt Enhancer",
        "width": 1200,
        "height": 800,
        "minWidth": 1200,
        "minHeight": 800,
        "maximizable": false,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {},
      "nsis": {
        "installMode": "perMachine"
      }
    }
  }
}
